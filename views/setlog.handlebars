<script src="assets/logic/setlog_table.js" type="text/javascript"></script>
<script src="assets/logic/setlog_modal.js" type="text/javascript"></script>

<div class="card" id="data-control">
	<div class="card-header" id="data-control-heading">
		<button class="btn" id="data-controls"> search </button>
	</div>

	<div class="card-body" id="control-box">

		<div class="container-fluid">
			<div class="row">
				<div class="col">
					<button id="get-today" class="btn btn-lg primary-search">today</button>
				</div>
				<div class="col">
					<button id="get-all" class="btn btn-lg primary-search" type="submit"> all </button>
				</div>
				<div class="col">
					<button id="get-week" class="btn btn-lg primary-search" type="submit"> week </button>
				</div>
			</div>
			<br>

			<form id="get-date">
				<div class="row form-group">
					<div class="col">
						<input class="form-control input-search" type="date" id="date-input">
					</div>
					<div class="col">
						<button class="btn input-search" type="submit">date</button>
					</div>
				</div>
			</form>

			<form id="get-month">
				<div class="row form-group">
					<div class="col">
						<select class="form-control input-search" id="month-selection">
							<option value=1> January </option>
							<option value=2> Februrary </option>
							<option value=3> March </option>
							<option value=4> April </option>
							<option value=5> May </option>
							<option value=6> June </option>
							<option value=7> July </option>
							<option value=8> August </option>
							<option value=9> September </option>
							<option value=10> October </option>
							<option value=11> November </option>
							<option value=12> December </option>
						</select>
					</div>
					<div class="col">
						<button class="btn input-search" type="submit">month</button>
					</div>
				</div>
			</form>

			<form id="get-movement">
				<div class="row form-group">
					<div class="col">
						<select class="form-control input-search" id="movement-selection">
							{{#each mvmt}}
								<option value={{movement_id}}> {{movement_name}} </option>
							{{/each}}
						</select>
					</div>
					<div class="col">
						<button class="btn input-search" type="submit">movement</button>
					</div>
				</div>
			</form>

		</div>
	</div>
</div>
<br>

<div class="alert alert-dismissible" role="alert" id="setlog-alert">
	<button type="button" class="close" data-hide="alert" aria-label="Close">
    	<span aria-hidden="true">&times;</span>
  	</button>
  	SUCCESSFULLY <strong id="setlog-alert-message"></strong>
  	FOR SET ID# <strong id="setlog-alert-id"></strong>
</div>

<div class="card" id="data-results">
	<div class="card-body">
		<table class="table">
			<tbody id="data-results-body">
				{{#each logged}}
				<tr id={{set_id}} class="table-data">
					<td> {{movement_name}} </td>
					<td> {{weight}} </td>
					<td> {{no_sets}} </td>
					<td> x </td>
					<td> {{no_reps}} </td>
					<td> {{set_date}} </td>
					<td> <button class="btn get-notes" value={{set_id}}> notes </button> </td>
					<td> <button class="btn get-conditions" value={{set_id}}> conditions </button> </td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</div>

<div class="modal fade" id="setlog-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 class="modal-title" id="setlog-modal-head">NO DATA</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
      		</div>
      
      		<div id="setlog-modal-body" class="modal-body">
        		NO DATA
      		</div>
      		
      		<div class="modal-footer">
        		<form class="form-inline" id="add-set-condition">
					<div class="form-group">
						<select class="form-control" id="condition-selection">
							{{#each conditions}}
								<option value={{condition_id}}> {{condition_name}} </option>
							{{/each}}
						</select>
					</div>

					<button class="btn btn-danger btn-md submit-commentary" id="submit-condition-id" value=0 type="submit">
						add condition
					</button>
				</form>

				<form class="form-inline" id="add-set-note">
					<div class="form-group">
						<textarea id="note-content" class="form-control"></textarea>
					</div>

					<button class="btn btn-primary btn-md submit-commentary" id="submit-condition-id-note" placeholder="" value=0 type="submit">
						add note
					</button>
				</form>
      		</div>
    	</div>
    </div>
</div>