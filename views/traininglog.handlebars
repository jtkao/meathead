<script src="assets/logic/setlog_logic.js" type="text/javascript"></script>

<div class="container-fluid">
	<div class="panel panel-default" id="data-control">
		<div class="panel-heading"> data control </div>
		<div class="form-inline panel-body">
			<button class="btn" id="get-week"> all logs in the past week </button>
		</div>
	</div>
</div>

<div class="container-fluid" id="data-results"> 
	<table class="table">
		<thead>
			<tr>
				<th> MOVEMENT </th>
				<th> WEIGHT </th>
				<th> SETS </th>
				<th> REPS </th>
				<th> DATE </th>
				<th> NOTES </th>
				<th> CONDITIONS </th>
			</tr>
		</thead>

		<tbody>
			{{#each logged}}
			<tr id={{set_id}}>
				<td> {{movement_name}} </td>
				<td> {{weight}} </td>
				<td> {{no_sets}} </td>
				<td> {{no_reps}} </td>
				<td> {{set_date}} </td>
				<td> <button class="get-notes" value={{set_id}}> view </button> </td>
				<td> <button class="get-conditions" value={{set_id}}> view </button> </td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>
