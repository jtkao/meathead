<script src="assets/logic/controls.js" type="text/javascript"></script>
<script src="assets/logic/auth_logic.js" type="text/javascript"></script>

<div class="alert alert-danger" role="alert" id="bad-password-alert">
	<strong>INVALID PASSWORD</strong>
</div>

<div class="alert alert-danger alert-dismissible" role="alert" id="set-delete-alert">
	 <button type="button" class="close" data-hide="alert" aria-label="Close">
	    <span aria-hidden="true">&times;</span>
	  </button>
	DELETED ALL RECORDS FOR SET ID#<strong id="set-delete-alert-message"></strong>
</div>

<div class="alert alert-success alert-dismissible" role="alert" id="update-setdate-alert">
	 <button type="button" class="close" data-hide="alert" aria-label="Close">
	    <span aria-hidden="true">&times;</span>
	  </button>
	CHANGED DATE FOR SET ID#<strong id="update-setdate-alert-id"></strong> 
	TO<strong id="update-setdate-alert-date"></strong>
</div>

<div class="alert alert-danger alert-dismissible" role="alert" id="bad-delete-alert">
	<button type="button" class="close" data-hide="alert" aria-label="Close">
    	<span aria-hidden="true">&times;</span>
  	</button>
	CANNOT DELETE SET THAT DOES NOT EXIST!
</div>


<div class="container-fluid" id="auth-box">
	<div class="card">
		<div class="card-body">
			<form id="login-box">
				<br>
				<div class="form-group row justify-content-center">
					<div class="col-6">
						<input class="form-control" type="password" id="password-input">
					</div>
				</div>

				<div class="form-group row justify-content-center">
					<button class="btn btn-lg col-6 border-btn" id="login-btn" type="submit">LOGIN</button>
				</div>
				<br>
			</form>
		</div>
	</div>
</div>

<div class="container-fluid" id="controls-box">

	<div class="card">
		<div class="card-header">
			Delete all records for an individual set. 
		</div>

		<div class="card-body">
			<form id="delete-sets-box" class="form-inline">
				<div class="form-group">
					<select class="form-control" type="number" id="delete-sets-input">
						{{#each setid}}
							<option value={{set_id}}> {{set_id}} </option>
						{{/each}}
					</select>
				</div>
				<button class="btn btn-danger control-btn" type="submit"> DELETE ALL SET DATA </button>
			</form>
		</div>
	</div>

	<div class="card">
		<div class="card-header">
			Update set date.
		</div>

		<div class="card-body">
			<form id="update-setdate-box" class="form-inline">
				<div class="form-group">
					<select class="form-control" type="number" id="update-setdate-id-input">
						{{#each setid}}
							<option value={{set_id}}> {{set_id}} </option>
						{{/each}}
					</select>
				</div>
				<div class="form-group">
						<input class="form-control input-search" type="date" id="update-setdate-date-input">
				</div>
				<button class="btn btn-success control-btn" type="submit"> UPDATE SET DATE </button>
			</form>
		</div>
	</div>
	<br>
	<div class="row">
		<div class="col">
			<div class="card">
				<div class="card-body">
					<form id="add-t-movements" class="form-inline">
						<div class="form-group">
							<input class="form-control" type="text" id="t-movements-input">
						</div>
						<button class="btn btn-default control-btn border-btn" type="submit"> ADD MOVEMENT </button>
					</form>
				</div>
			</div>
		</div>
		<div class="col">
			<div class="card">
				<div class="card-body">
					<form id="add-t-conditions" class="form-inline">
						<div class="form-group">
							<input class="form-control" type="text" id="t-conditions-input">
						</div>
						<button class="btn btn-default control-btn border-btn" type="submit"> ADD CONDITION</button>
					</form>
				</div>
			</div>
		</div>
	</div>

</div>

<div class="modal fade" id="confirm-delete-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				ARE YOU SURE YOU WANT TO DELETE SET ID#<strong id="confirm-delete-id"></strong>
      		</div>
      
      		<div id="confirm-delete-body" class="modal-body">
        		<button class="btn btn-lg btn-danger" id="btn-confirm-delete"> YES </button>
        		<button class="btn btn-lg btn-primary" id="btn-cancel-delete"> NO </button>
      		</div>
      		
    </div>
</div>
